---
import MainLayout from '../layouts/MainLayout.astro';
import { getCollection } from 'astro:content';

const allBooks = await getCollection('books');
const featuredBooks = allBooks.slice(0, 3);
---

<MainLayout title="Wayne Leighton Books - Lawful Fightback">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-gray-800 to-gray-900 py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <!-- Logo prominently displayed -->
        <div class="mb-8">
          <img 
            src="/logo.jpeg" 
            alt="Wayne Leighton Logo - Scales of Justice with Raised Fist" 
            class="w-32 h-32 md:w-40 md:h-40 mx-auto rounded-full shadow-2xl border-4 border-primary-600"
          />
        </div>
        
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6">
          Transform Your
          <span class="text-primary-400">Passion</span>
          Fighting Back
        </h1>
        <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
          Discover Wayne Leighton's collection of transformative books on lawfare, 
          court trials and successes against the state.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/shop" 
            class="bg-primary-600 hover:bg-primary-700 text-white px-8 py-4 rounded-lg font-semibold transition-colors inline-flex items-center justify-center"
          >
            Shop All Books
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
          <a 
            href="#featured" 
            class="border-2 border-primary-400 text-primary-400 hover:bg-primary-400 hover:text-gray-900 px-8 py-4 rounded-lg font-semibold transition-colors inline-flex items-center justify-center"
          >
            Browse Featured
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Books Section -->
  <section id="featured" class="py-20">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
          Featured Books
        </h2>
        <p class="text-lg text-gray-300 max-w-2xl mx-auto">
          Explore Wayne Leighton's Most Popular Reads
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-5xl mx-auto">
        {featuredBooks.map((book) => (
          <div class="bg-gray-800 rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 overflow-hidden group">
            <div class="aspect-[3/4] overflow-hidden">
              <img 
                src={book.data.coverImageUrl} 
                alt={`${book.data.title} cover`}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                loading="lazy"
              />
            </div>
            <div class="p-6">
              <h3 class="text-lg font-semibold text-white mb-2 line-clamp-2">
                {book.data.title}
              </h3>
              <p class="text-gray-300 text-sm mb-2">
                by {book.data.author}
              </p>
              <p class="text-gray-400 text-sm mb-4 line-clamp-3">
                {book.data.description}
              </p>
              <div class="flex items-center justify-between">
                <div class="text-sm">
                  <span class="text-gray-400">{book.data.format}:</span>
                  <span class="font-semibold text-primary-400 ml-1">£{book.data.price}</span>
                </div>
                <a 
                  href={`/books/${book.slug}`}
                  class="bg-primary-600 hover:bg-primary-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors"
                >
                  View Details
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>

      <div class="text-center mt-12">
        <a 
          href="/shop" 
          class="bg-primary-600 hover:bg-primary-700 text-white px-8 py-4 rounded-lg font-semibold transition-colors inline-flex items-center"
        >
          Shop All Books
          <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- About Preview Section -->
  <section class="bg-gray-800 py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
          About Wayne Leighton
        </h2>
        <p class="text-lg text-gray-300 mb-8">
          Wayne Leighton is a fearless author, speaker, and legal reform advocate whose groundbreaking work has challenged some of the most powerful institutions in the UK. His latest book delivers a powerful exposé of corruption and systemic deceit within the judiciary and government, presenting irrefutable proof through real court transcripts. Wayne's mission is clear: to expose the truth and empower people with the knowledge and evidence to fight back against institutional abuse.
        </p>
        <a 
          href="/about" 
          class="bg-primary-600 hover:bg-primary-700 text-white px-8 py-4 rounded-lg font-semibold transition-colors inline-flex items-center"
        >
          Learn More About Wayne
          <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Facebook Connect Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-2xl mx-auto text-center">
        <h2 class="text-3xl font-bold text-white mb-4">
          Stay Connected
        </h2>
        <p class="text-lg text-gray-300 mb-8">
          Get exclusive insights, early access to new books, and special offers by joining Wayne's Facebook group.
        </p>
        <a 
          href="https://www.facebook.com/groups/4047462218869453" 
          target="_blank" 
          rel="noopener noreferrer"
          class="inline-flex items-center justify-center px-8 py-4 bg-[#1877F2] hover:bg-[#0E65D9] text-white rounded-lg font-semibold transition-colors gap-2"
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd"></path>
          </svg>
          Join Our Facebook Group
        </a>
      </div>
    </div>
  </section>
</MainLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>